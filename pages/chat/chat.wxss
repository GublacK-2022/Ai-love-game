/* pages/chat/chat.wxss */

.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 顶部信息栏 */
.header {
  background: white;
  padding: 12px 16px;
  border-bottom: 1px solid #f0f0f0;
  flex-shrink: 0;
}

.character-info {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  margin-right: 12px;
}

.info {
  flex: 1;
}

.name {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #1a1a1a;
}

.status {
  display: block;
  font-size: 12px;
  color: #52c41a;
  margin-top: 2px;
}

/* 好感度条 */
.affection-bar {
  width: 100%;
}

.affection-label {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #8e8e93;
  margin-bottom: 6px;
}

.affection-value {
  color: #667eea;
  font-weight: 600;
}

.progress-bg {
  width: 100%;
  height: 6px;
  background: #f2f2f7;
  border-radius: 3px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s ease;
  border-radius: 3px;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 16px;
  overflow-y: scroll;
}

.message-item {
  margin-bottom: 16px;
}

.message {
  display: flex;
  align-items: flex-end;
}

/* AI消息 */
.ai-message {
  justify-content: flex-start;
}

.ai-message .msg-avatar {
  width: 36px;
  height: 36px;
  border-radius: 18px;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  margin-right: 8px;
  flex-shrink: 0;
}

.ai-bubble {
  background: white;
  color: #1a1a1a;
  max-width: 70%;
  padding: 12px 16px;
  border-radius: 4px 18px 18px 18px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  word-wrap: break-word;
  line-height: 1.6;
}

/* 用户消息 */
.user-message {
  justify-content: flex-end;
}

.user-message .msg-avatar {
  width: 36px;
  height: 36px;
  border-radius: 18px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin-left: 8px;
  flex-shrink: 0;
}

.user-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  max-width: 70%;
  padding: 12px 16px;
  border-radius: 18px 4px 18px 18px;
  word-wrap: break-word;
  line-height: 1.6;
}

/* AI思考中动画 */
.thinking {
  display: flex;
  gap: 4px;
  padding: 16px;
}

.dot {
  width: 8px;
  height: 8px;
  background: #c3cfe2;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 输入框 */
.input-bar {
  background: white;
  padding: 8px 16px;
  border-top: 1px solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 8px;
  flex-shrink: 0;
  padding-bottom: calc(8px + env(safe-area-inset-bottom));
}

.input-field {
  flex: 1;
  background: #f2f2f7;
  border-radius: 20px;
  padding: 10px 16px;
  font-size: 15px;
  height: 40px;
}

.send-btn {
  width: 60px;
  height: 40px;
  background: #e5e5ea;
  color: #8e8e93;
  border-radius: 20px;
  font-size: 14px;
  line-height: 40px;
  padding: 0;
  margin: 0;
  border: none;
}

.send-btn::after {
  border: none;
}

.send-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.send-btn:disabled {
  opacity: 0.5;
}