<!--pages/index/index.wxml-->
<view class="index-container">
  <!-- 主视觉区域 -->
  <view class="hero-section">
    <!-- Logo/品牌名 -->
    <view class="brand">
      <text class="brand-name">对白</text>
      <view class="brand-line"></view>
    </view>

    <!-- 主标语 -->
    <view class="slogan-wrapper">
      <text class="slogan-main">在这里，你是主角</text>
      <text class="slogan-sub">开启一段只属于你的故事</text>
    </view>

    <!-- 特点标签 -->
    <view class="tags">
      <view class="tag">
        <text class="tag-icon">📖</text>
        <text class="tag-text">文字冒险</text>
      </view>
      <view class="tag">
        <text class="tag-icon">🎭</text>
        <text class="tag-text">角色扮演</text>
      </view>
      <view class="tag">
        <text class="tag-icon">✨</text>
        <text class="tag-text">AI 驱动</text>
      </view>
    </view>
  </view>

  <!-- 核心价值展示 -->
  <view class="value-section">
    <view class="value-item">
      <view class="value-icon-wrapper">
        <text class="value-icon">✍️</text>
      </view>
      <view class="value-content">
        <text class="value-title">你的选择塑造故事</text>
        <text class="value-desc">每一句对白都由你决定</text>
      </view>
    </view>

    <view class="value-item">
      <view class="value-icon-wrapper">
        <text class="value-icon">💫</text>
      </view>
      <view class="value-content">
        <text class="value-title">沉浸式叙事体验</text>
        <text class="value-desc">如同身临其境的互动小说</text>
      </view>
    </view>

    <view class="value-item">
      <view class="value-icon-wrapper">
        <text class="value-icon">🎬</text>
      </view>
      <view class="value-content">
        <text class="value-title">专属剧情走向</text>
        <text class="value-desc">不同的选择，不同的结局</text>
      </view>
    </view>
  </view>

  <!-- CTA 按钮 -->
  <view class="cta-section">
    <button class="btn-start" bindtap="goToCharacterSelect">
      开始你的故事 →
    </button>
    <text class="privacy-link" bindtap="goToPrivacy">隐私政策</text>
  </view>
</view>
