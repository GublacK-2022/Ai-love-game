<!--pages/index/index.wxml-->
<view class="container">
  <!-- 欢迎区域 -->
  <view class="welcome-section">
    <image class="logo" src="/images/logo.png" mode="aspectFit" />
    <text class="app-name">AI恋爱养成</text>
    <text class="app-slogan">开启你的专属恋爱故事</text>
  </view>

  <!-- 功能介绍 -->
  <view class="feature-section">
    <view class="feature-item">
      <text class="feature-icon">💬</text>
      <text class="feature-title">真实对话</text>
      <text class="feature-desc">AI驱动的自然对话体验</text>
    </view>
    
    <view class="feature-item">
      <text class="feature-icon">❤️</text>
      <text class="feature-title">情感养成</text>
      <text class="feature-desc">好感度系统，多种结局</text>
    </view>
    
    <view class="feature-item">
      <text class="feature-icon">🎭</text>
      <text class="feature-title">多样角色</text>
      <text class="feature-desc">不同性格，总有一款适合你</text>
    </view>
  </view>

  <!-- 开始按钮 -->
  <view class="action-section">
    <button class="btn-start" bindtap="goToCharacterSelect">
      开始体验
    </button>
    
    <text class="tip-text">已有 {{userCount}} 人开启了恋爱之旅</text>
  </view>
</view>