/* pages/index/index.wxss */
.index-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
  display: flex;
  flex-direction: column;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  overflow: hidden;
}

/* 添加背景装饰 */
.index-container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(103, 126, 234, 0.1) 0%, transparent 70%);
  animation: rotate 30s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* ========== 主视觉区域 ========== */
.hero-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 1;
  padding-top: 80rpx;
}

/* 品牌名 */
.brand {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  animation: fadeInDown 1s ease-out;
}

.brand-name {
  font-size: 100rpx;
  font-weight: 300;
  color: #fff;
  letter-spacing: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  margin-bottom: 20rpx;
}

.brand-line {
  width: 120rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #fff, transparent);
  border-radius: 2rpx;
}

/* 标语 */
.slogan-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  animation: fadeInUp 1s ease-out 0.3s both;
}

.slogan-main {
  font-size: 48rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 20rpx;
  text-align: center;
  line-height: 1.4;
}

.slogan-sub {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  line-height: 1.6;
}

/* 标签 */
.tags {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
  justify-content: center;
  animation: fadeInUp 1s ease-out 0.6s both;
}

.tag {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 28rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 50rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.tag-icon {
  font-size: 32rpx;
}

.tag-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* ========== 核心价值区域 ========== */
.value-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin: 60rpx 0 40rpx;
  animation: fadeInUp 1s ease-out 0.9s both;
  position: relative;
  z-index: 1;
}

.value-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.value-item:active {
  transform: translateY(2rpx);
  background: rgba(255, 255, 255, 0.08);
}

.value-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(103, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
  border-radius: 50%;
  flex-shrink: 0;
}

.value-icon {
  font-size: 40rpx;
}

.value-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.value-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  line-height: 1.4;
}

.value-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.6;
}

/* ========== CTA 区域 ========== */
.cta-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  margin-top: auto;
  padding-top: 40rpx;
  animation: fadeInUp 1s ease-out 1.2s both;
  position: relative;
  z-index: 1;
}

.btn-start {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  position: relative;
  overflow: hidden;
}

.btn-start::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.btn-start:active::before {
  left: 100%;
}

.btn-start::after {
  border: none;
}

.btn-text {
  font-size: 34rpx;
  font-weight: 500;
  color: #fff;
  letter-spacing: 2rpx;
}

.btn-icon {
  font-size: 36rpx;
  color: #fff;
  font-weight: 300;
}

.privacy-link {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  text-decoration: underline;
  padding: 10rpx;
}

/* ========== 动画 ========== */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
