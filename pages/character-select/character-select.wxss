/* pages/character-select/character-select.wxss */

.container {
  padding: 0;
  background: linear-gradient(180deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(103, 126, 234, 0.1) 0%, transparent 70%);
  animation: rotate 30s linear infinite;
  pointer-events: none;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 页面标题 */
.page-header {
  padding: 32px 20px 24px;
  text-align: center;
  position: relative;
  z-index: 1;
}

.header-title {
  display: block;
  font-size: 26px;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8px;
  letter-spacing: 0.5px;
}

.header-subtitle {
  display: block;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
}

/* 角色列表 */
.character-list {
  height: calc(100vh - 150px);
  padding: 16px 16px 20px;
  position: relative;
  z-index: 1;
}

/* 角色卡片 - 垂直布局 */
.character-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.character-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.5s;
}

.character-card:active::before {
  left: 100%;
}

.character-card:active {
  transform: translateY(-2px);
  background: rgba(255, 255, 255, 0.08);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
}

/* 角色头像区域 */
.character-avatar {
  width: 100%;
  height: 240px;
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 12px;
  background: linear-gradient(135deg, rgba(103, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
}

.avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center top;
}

/* 免费/付费标签 */
.tag {
  position: absolute;
  top: 8px;
  right: 8px;
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 500;
  backdrop-filter: blur(10px);
}

.tag-free {
  background: rgba(52, 199, 89, 0.9);
  color: white;
}

.tag-paid {
  background: rgba(255, 149, 0, 0.9);
  color: white;
}

/* 角色信息区域 */
.character-info {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.name-row {
  display: flex;
  align-items: baseline;
  gap: 8px;
}

.character-name {
  font-size: 20px;
  font-weight: 600;
  color: #fff;
}

.character-age {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
}

.character-occupation {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.7);
}

/* 标签组 */
.tags {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
  margin: 4px 0;
}

.tag-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4px 10px;
  background: rgba(103, 126, 234, 0.2);
  color: rgba(255, 255, 255, 0.9);
  font-size: 11px;
  line-height: 1;
  border-radius: 10px;
  border: 1px solid rgba(103, 126, 234, 0.3);
}

/* 角色简介 */
.character-intro {
  font-size: 13px;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 4px;
}
