/* pages/character-select/character-select.wxss */

.container {
  padding: 0;
  background: linear-gradient(180deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(103, 126, 234, 0.1) 0%, transparent 70%);
  animation: rotate 30s linear infinite;
  pointer-events: none;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 页面标题 */
.page-header {
  padding: 40rpx 40rpx 30rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
}

/* 角色列表 */
.character-list {
  height: calc(100vh - 200rpx);
  padding: 20rpx 40rpx 40rpx;
  position: relative;
  z-index: 1;
}

/* 角色卡片 */
.character-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.character-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.5s;
}

.character-card:active::before {
  left: 100%;
}

.character-card:active {
  transform: translateY(2rpx);
  background: rgba(255, 255, 255, 0.08);
}

/* 头像 */
.character-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 28rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, rgba(103, 126, 234, 0.3) 0%, rgba(118, 75, 162, 0.3) 100%);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

/* 角色信息 */
.character-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.character-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 8rpx;
}

.character-meta {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.meta-item {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.character-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 箭头图标 */
.arrow-icon {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.4);
  margin-left: 20rpx;
  flex-shrink: 0;
}
